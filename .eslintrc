{
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "no-shadow": "error",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true
      }
    ]
  }
}
